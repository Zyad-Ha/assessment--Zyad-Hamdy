<Window x:Class="Zyad_Hamdy_assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zyad_Hamdy_assessment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"></RowDefinition>
            <RowDefinition Height="176*"></RowDefinition>
            <RowDefinition Height="145*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Login Page" FontSize="50" FontWeight="DemiBold" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="77" Width="260"></Label>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Margin="20">
            <Label Content="Name: " Height="35" FontSize="19" Width="90" ></Label>
            <TextBox Name="nametxtb" Width="150" Height="35"  ></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="25">
            <Label Content="password: " Height="35" FontSize="19" Width="90" ></Label>
            <PasswordBox Name="passtxtb" Width="150" Height="35"  ></PasswordBox>
        </StackPanel>

        <Button IsDefault="True" Grid.Row="2" Width="150" Height="50" HorizontalAlignment="Center"  VerticalAlignment="Center" Content="LogIn" FontSize="20" FontWeight="DemiBold" Name="loginbtn" Click="loginbtn_Click"></Button>
        
    </Grid>
</Window>
