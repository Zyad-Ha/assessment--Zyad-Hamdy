<Window x:Class="Zyad_Hamdy_assessment.ERequestsWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zyad_Hamdy_assessment"
        mc:Ignorable="d"
        Title="ERequestsWindow1" Height="500" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"></RowDefinition>
            <RowDefinition Height="200*"></RowDefinition>
            <RowDefinition Height="145*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Leave Requests Page" FontSize="40" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="65" Width="400"/>
        <DataGrid Name="RDG" Grid.Row="1" Width="700" Height="170"></DataGrid>

        <Button HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Bottom" Width="150" Height="35" Grid.Row="2" Content="Add request" Margin="25" Click="Button_Click" ></Button>

        
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.Row="2"> 
            <Label Content="start date: "  Width="120" Height="35" FontSize="19"></Label>
            <TextBox Name="Sdattxtbe" Width="150" Height="35"  ></TextBox>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"  Grid.Row="2"> 
            <Label Content="End date: "  Width="120" Height="35" FontSize="19"></Label>
            <TextBox Name="Edatetxtb" Width="150" Height="35"  ></TextBox>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"  Grid.Row="2"> 
            <Label Content="reson: "  Width="100" Height="35" FontSize="19"></Label>
            <TextBox Name="LeaveTypetxtb" Width="150" Height="35"  ></TextBox>
        </StackPanel>
    </Grid>
</Window>
