<Window x:Class="Zyad_Hamdy_assessment.AdminReq"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zyad_Hamdy_assessment"
        mc:Ignorable="d"
        Title="AdminReq" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"></RowDefinition>
            <RowDefinition Height="200*"></RowDefinition>
            <RowDefinition Height="145*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Leave Requests Page" FontSize="40" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="65" Width="400"/>
        <DataGrid Name="RDG" Grid.Row="1" Width="700" Height="170"></DataGrid>

        <Button HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Bottom" Width="150" Height="35" Grid.Row="2" Content="Save" Margin="690,0,0,23" Click="Button_Click"  ></Button>

        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center">
            <Label Content="ReqID" HorizontalAlignment="Center"  Grid.Row="2" Width="100" Height="35" FontSize="18"></Label>
            <TextBox Name="Rid" Width="150" Height="35"  Margin="0,0,18,0" ></TextBox >

            <Label Content="select status: "  Grid.Row="2" Width="124" Height="35" FontSize="18"/>

            <ComboBox Name="CBS" Width="150" Height="35" >
                <ComboBoxItem Content="Pending"></ComboBoxItem>
                <ComboBoxItem Content="Approved"></ComboBoxItem>
                <ComboBoxItem Content="Rejected"></ComboBoxItem>
            </ComboBox>

        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.Row="2"/>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"  Grid.Row="2"/>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"  Grid.Row="2"/>
    </Grid>
</Window>
